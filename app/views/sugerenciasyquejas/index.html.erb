<%- model_class = Sugerenciasyqueja -%>
<div class="page-header">
  <h1>Sugerencias Y Quejas</h1>
</div>

<%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 Buscar Sugerencias/Quejas: 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil, :class => 'btn' %> 
 <% end %> 
<br> 
Seleccione numero de registros por pagina:
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 

<br />

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'huesped_id' %></th>
      <th><%= sortable 'observaciones' %></th>
      <th><%= sortable 'problemas_en_la_estadia' %></th>
      <th><%= sortable 'sugerencias' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @sugerenciasyquejas %>
  </tbody>
  </table>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva Sugerencia/Queja', new_sugerenciasyqueja_path, :remote => true %></td>
    </tr>
  </tfoot>

<br><br>

<div align="center"> 
<%= will_paginate @sugerenciasyquejas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 

<p> Total Alimentos : <%= @sugerenciasyquejas.total_entries %> </p>