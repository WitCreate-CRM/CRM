<%- model_class = Cargo -%>
<div class="page-header">
  <h1>Cargos</h1>

 <%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 

 Nombre Cargo
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil %> 
 <% end %> 
 
<br />

<br>
Seleccione numero de registros por pagina:

<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 
</br>

</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>descripcion</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cargos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Cargo', new_cargo_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br /> 
<br /> 
<div align="center"> 
 <%= will_paginate @cargos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p> 
 Total Cargos : <%= @cargos.total_entries %> 
</p>

