<%- model_class = Preferencia -%>
<div class="page-header">
  <h1><%= image_tag @huesped.avatar.url(:thumb), :class => "img-rounded img-polaroid" %> &nbsp; &nbsp; &nbsp; &nbsp; Preferencias de <%= @huesped.primer_nombre %></h1>
</div>

<form method="get" class="form-search">

  <div class="input-append">

    <%= content_tag :label do %> 

    <%= text_field_tag :limit, params[:limit] , :id=>'num', :class => "span1 search-query" %> 

    <% end %>

    <button type="submit" class="btn btn-info">Mostrar</button>
 
  </div>

  <div class="input-append sea">

      <%= text_field_tag :search, params[:search], :class => "span2 search-query ", :placeholder => "Buscar Registro" %> 

      <button type="submit" class="btn btn-info"><i class="icon-search"></i></button>
       
  </div>

</form>

<br><br> 

