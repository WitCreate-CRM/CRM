<%= simple_form_for @empleado, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :cargo_id_id %>
  <%= f.input :primer_nombre %>
  <%= f.input :segundo_nombre %>
  <%= f.input :primer_apellido %>
  <%= f.input :segundo_apellido %>
  <%= f.input :tipo_identificacion_id_id %>
  <%= f.input :documento %>
  <%= f.input :departamento_id_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                empleados_path, :class => 'btn' %>
  </div>
<% end %>
