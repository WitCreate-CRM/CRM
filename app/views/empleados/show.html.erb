<%- model_class = Empleado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cargo_id_id) %>:</strong></dt>
  <dd><%= @empleado.cargo_id_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primer_nombre) %>:</strong></dt>
  <dd><%= @empleado.primer_nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:segundo_nombre) %>:</strong></dt>
  <dd><%= @empleado.segundo_nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primer_apellido) %>:</strong></dt>
  <dd><%= @empleado.primer_apellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:segundo_apellido) %>:</strong></dt>
  <dd><%= @empleado.segundo_apellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_identificacion_id_id) %>:</strong></dt>
  <dd><%= @empleado.tipo_identificacion_id_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:documento) %>:</strong></dt>
  <dd><%= @empleado.documento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:departamento_id_id) %>:</strong></dt>
  <dd><%= @empleado.departamento_id_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              empleados_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_empleado_path(@empleado), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              empleado_path(@empleado),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
