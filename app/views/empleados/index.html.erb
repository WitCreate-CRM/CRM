<%- model_class = Empleado -%>
<div class="page-header">
  <h1>Empleados</h1>
 <%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 

 Nombre De Empleados
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil %> 
 <% end %> 
 
<br />

<br>
Seleccione numero de registros por pagina:

<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 
</br>
</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'cargo_id' %></th>
      <th><%= sortable 'primer_nombre' %></th>
      <th><%= sortable 'segundo_nombre' %></th>
      <th><%= sortable 'primer_apellido' %></th>
      <th><%= sortable 'segundo_apellido' %></th>
      <th><%= sortable 'tipo_identificacion_id' %></th>
      <th><%= sortable 'documento' %></th>
      <th><%= sortable 'departamento_id' %></th>

      <th>actions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @empleados %>
  </tbody>
  
</table>
<tfoot>
    <tr>
      <td><%= link_to 'Nuevo Empleado', new_empleado_path, :remote => true %></td>
    </tr>
  </tfoot>



<br /> 
<br /> 
<div align="center"> 
 <%= will_paginate @empleados, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p> 
 Total Empleados : <%= @empleados.total_entries %> 
</p>

