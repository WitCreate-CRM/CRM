<%- model_class = Empleado -%>
<div class="page-header">
  <center><h1>Empleados</h1></center>
</div>


<form method="get" class="form-search">

  <div class="input-append">

    <%= content_tag :label do %> 
    <%= text_field_tag :limit, params[:limit] , :id=>'num', :class => "span1 search-query" %> 
    <% end %>
    <button type="submit" class="btn btn-info">Mostrar</button>
 
  </div>

  <div class="input-append sea">

      <%= text_field_tag :search, params[:search], :class => "span2 search-query ", :placeholder => "Buscar Registro" %> 
      <button type="submit" class="btn btn-info"><i class="icon-search"></i></button>
       
  </div>

</form>

<br>

<table class="table table-hover table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th> Foto </th>
      <th><%= sortable 'cargo_id' %></th>
      <th><%= sortable 'primer_nombre' %></th>
      <th><%= sortable 'segundo_nombre' %></th>
      <th><%= sortable 'apellido' %></th>
      <th><%= sortable 'documento' %></th>
      <th><%= sortable 'departamento_id' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @empleados %>
  </tbody>
  
</table>
<tfoot>
    <tr>
      <td><%= link_to 'Nuevo Empleado', new_empleado_path, :remote => true, :class => "btn btn-info", :style => "color:white" %></td>
    </tr>
  </tfoot>

<hr>

<div class="flickr_pagination" > 
  <div class="page_info">
      <p><b> Total Empleados :</b> <%= @empleados.total_entries %> </p>
    </div>
    <%= will_paginate @empleados, :container => false, :previous_label => '&larr; Anterior', :next_label => 'Siguiente &rarr;' %>
  </div>