<%- model_class = Empleado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cargo_id) %></th>
      <th><%= model_class.human_attribute_name(:primer_nombre) %></th>
      <th><%= model_class.human_attribute_name(:segundo_nombre) %></th>
      <th><%= model_class.human_attribute_name(:primer_apellido) %></th>
      <th><%= model_class.human_attribute_name(:segundo_apellido) %></th>
      <th><%= model_class.human_attribute_name(:tipo_identificacion_id_id) %></th>
      <th><%= model_class.human_attribute_name(:documento) %></th>
      <th><%= model_class.human_attribute_name(:departamento_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @empleados.each do |empleado| %>
      <tr>
        <td><%= link_to empleado.id, empleado_path(empleado) %></td>
        <td><%= empleado.cargo_id %></td>
        <td><%= empleado.primer_nombre %></td>
        <td><%= empleado.segundo_nombre %></td>
        <td><%= empleado.primer_apellido %></td>
        <td><%= empleado.segundo_apellido %></td>
        <td><%= empleado.tipo_identificacion_id %></td>
        <td><%= empleado.documento %></td>
        <td><%= empleado.departamento_id %></td>
        <td><%=l empleado.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_empleado_path(empleado), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      empleado_path(empleado),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_empleado_path,
            :class => 'btn btn-primary' %>
