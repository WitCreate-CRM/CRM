<%- model_class = Empresa -%>
<div class="page-header">
  <h1>Empresas</h1>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>id</th>
      <th>nombre</th>
      <th>nit</th>
      <th>direccion</th>
      <th>created_at</th>
      <th></th>
    </tr>
