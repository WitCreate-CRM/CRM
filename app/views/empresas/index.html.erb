<%- model_class = Empresa -%>
<div class="page-header">
  <h1>Empresas</h1>
  <%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 

 Nombre De Empresa:

 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil %> 
 <% end %> 

 <br>
Seleccione numero de registros por pagina:
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 
</br>

</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
       <th><%= sortable 'id' %></th>
       <th><%= sortable 'nombre' %></th>
       <th><%= sortable 'nit' %></th>
       <th><%= sortable 'direccion' %></th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @empresas %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva empresa', new_empresa_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<div align="center"> 
 <%= will_paginate @empresas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p> 
 Total Empresas : <%= @empresas.total_entries %> 
</p>

