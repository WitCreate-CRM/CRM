<%- model_class = Ultimavisita -%>
<%= javascript_include_tag "ultimavisita.js" %>

<div class="page-header">
  <center><h1>Listado de ultimas visitas de: <%= @visita.empresa.nombre %></h1>
</center>
</div>



<form method="get" class="form-search">
  <div class="input-append">

    <%= content_tag :label do %> 
    <%= text_field_tag :limit, params[:limit] , :id=>'num', :class => "span1 search-query" %> 
    <% end %>
    <button type="submit" class="btn btn-info">Mostrar</button>

  </div>
</form>


<a href="#" class="most_busq_reg search_reg"> <span class="icon-th-list"></span>  Búscar Registro</a>

<div class="busq_reg_oculto">
  <form method="get" class="form-search">
    <div class="input-append">

      <%= text_field_tag :search, params[:search], :class => "span2 search-query ", :placeholder => "Buscar Registro" %> 

      <button type="submit" class="btn btn-info"><i class="icon-search"></i></button>
         
    </div>
  </form>
</div>


<a href="#" class="most_busq_fech search_fech"><span class="icon-calendar"></span>  Búscar Entre Fechas</a>

<div class="busq_fech_oculto">
<form method = "get" class="form-search">
  <div>
    <b>Desde: </b>
    <%= text_field_tag :created_at, params[:created_at], :class => "span2 search-query datepicker", :placeholder => "Fecha Inicial" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <b>Hasta: </b>
    <%= text_field_tag :created_at2, params[:created_at2], :class => "span2 search-query datepicker", :placeholder => "Fecha Final" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <%= submit_tag "Buscar", :class => 'btn btn-info' %>

  </div>
  
  <br>
  
  <div class="input-append">
    <%= text_field_tag :fecha, params[:fecha], :class => "span2 search-query datepicker ", :placeholder => "Buscar Registro" %>
    <button type="submit" class="btn btn-info"><i class="icon-search"></i></button>
  </div>

</form>
</div>



<br>
 
<table class="table table-hover table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'fecha' %></th>
      <th><%= sortable 'contacto' %></th>
      <th><%= sortable 'telefono' %></th>
      <th><%= sortable 'obsequio' %></th>
      <th><%= sortable 'comentario' %></th>
      <th><%= sortable 'pendiente' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @ultimavisitas  rescue nil%>
  </tbody>
  </table>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva ultima visita', new_visita_ultimavisita_path, :remote => true, :class => "btn btn-info", :style => "color:white" %></td>

      <%= link_to 'Visitas', visitas_path,:class => "btn btn-info", :style => "color:white"%>

    </tr>
  </tfoot>

<hr>

<div class="flickr_pagination" > 
  <div class="page_info">
      <p><b> Total ultimas visitas :</b> <%= @ultimavisitas.total_entries %> </p>
    </div>
    <%= will_paginate @ultimavisitas, :container => false, :previous_label => '&larr; Anterior', :next_label => 'Siguiente &rarr;' %>
  </div>
