<%- model_class = Visita -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:obsequio_id_id) %></th>
      <th><%= model_class.human_attribute_name(:empleado_id_id) %></th>
      <th><%= model_class.human_attribute_name(:empresa_id_id) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:comentarios) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @visitas.each do |visita| %>
      <tr>
        <td><%= link_to visita.id, visita_path(visita) %></td>
        <td><%= visita.obsequio_id_id %></td>
        <td><%= visita.empleado_id_id %></td>
        <td><%= visita.empresa_id_id %></td>
        <td><%= visita.fecha %></td>
        <td><%= visita.comentarios %></td>
        <td><%=l visita.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_visita_path(visita), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      visita_path(visita),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_visita_path,
            :class => 'btn btn-primary' %>
