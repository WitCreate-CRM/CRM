<%- model_class = Visita -%>
<div class="page-header">
  <center><h1>Visitas</h1></center>
</div>

<form method="get" class="form-search">

  <div class="input-append">

    <%= content_tag :label do %> 

    <%= text_field_tag :limit, params[:limit] , :id=>'num', :class => "span1 search-query" %> 

    <% end %>

    <button type="submit" class="btn btn-info">Mostrar</button>
 
  </div>

  <div class="input-append sea">

      <%= text_field_tag :search, params[:search], :class => "span2 search-query ", :placeholder => "Buscar Registro" %> 

      <button type="submit" class="btn btn-info"><i class="icon-search"></i></button>
       
  </div>


</form>

<form method = "get">
  <div class="input-apped">
    <b>Desde: </b>
    <%= text_field_tag :created_at, params[:created_at] %>
    <b>Hasta</b>
    <%= text_field_tag :created_at2, params[:created_at2] %>

    <%= submit_tag "Buscar" %>
  </div>
</form>



<br /><br />

<table class="table table-hover table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'obsequio' %></th>
      <th><%= sortable 'empleado_id' %></th>
      <th><%= sortable 'empresa_id' %></th>
      <th><%= sortable 'comentarios' %></th>
      <th><%= sortable 'created_at', :Fecha %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @visitas %>
  </tbody>
  </table>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva Visita', new_visita_path, :remote => true, :class => "btn btn-info", :style => "color:white" %></td>
    </tr>
  </tfoot>

<hr>

<div class="flickr_pagination" > 
  <div class="page_info">
      <p><b> Total Visitas :</b> <%= @visitas.total_entries %> </p>
    </div>
    <%= will_paginate @visitas, :container => false, :previous_label => '&larr; Anterior', :next_label => 'Siguiente &rarr;' %>
</div>
