<%- model_class = Telefono -%>
<div class="page-header">
  <h1>Telefonos</h1>

 <%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 Numero Telefonico: 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil %> 
 <% end %> 

 <br>
Seleccione numero de registros por pagina:
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 
</br>
</div>
 
<br />
</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'propietario_id' %></th>
      <th><%= sortable 'numero_telefonico' %></th>
      <th>actions</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @telefonos %>
  </tbody>
  
</table>
<tfoot>
    <tr>
      <td><%= link_to 'Nuevo Telefono', new_telefono_path, :remote => true %></td>
    </tr>
  </tfoot>

<br /> 
<br /> 
<div align="center"> 
 <%= will_paginate @telefonos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p> 
 Total Telefonos : <%= @telefonos.total_entries %> 
</p>

