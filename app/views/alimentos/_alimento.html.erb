<tr id=<%= "alimento_#{alimento.id}" %>>
  <td><%= link_to alimento.id, edit_alimento_path(alimento), :remote => true %></td>
  <td><%= alimento.descripcion %></td>
  
  <td>
  	<div class="btn-group">
  		<button class="btn btn-mini btn-info"> Opciones </button>
  		<button class="btn btn-mini btn-info dropdown-toggle" data-toggle="dropdown">
    		<span class="caret"></span>
    	</button>
  		<ul class="dropdown-menu" >

  		<li><%= link_to 'Mostrar', alimento, :remote => true,:class => "btn btn-mini", :style => "color:black" %></li>

    	<li><%= link_to 'Editar', edit_alimento_path(alimento), :remote => true, :class => "btn btn-mini", :style => "color:black" %></li>

    	<li><%= link_to 'Eliminar', alimento, :data => { :confirm => 'Esta Seguro?' }, :method => :delete, :remote => true, :class => "btn btn-mini btn-danger" , :style => "color:white" %></li>
    	</ul>
    </div>
  </td>
</tr>