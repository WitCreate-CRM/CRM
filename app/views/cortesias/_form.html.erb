<%= simple_form_for @cortesia, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :huesped_id %>
  <%= f.input :tabla_de_queso %>
  <%= f.input :botella_de_vino %>
  <%= f.input :alimento_id %>
  <%= f.input :otro_regalo %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                cortesias_path, :class => 'btn' %>
  </div>
<% end %>
