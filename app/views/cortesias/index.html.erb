<%- model_class = Cortesia -%>

<div class="page-header">

  <h1><%= image_tag @huesped.avatar.url(:thumb), :class => "img-rounded img-polaroid" %> &nbsp; &nbsp; &nbsp; &nbsp; Cortesias de <%= @huesped.primer_nombre %></h1>
</div>

<form method="get" class="form-search">

  <div class="input-append">

    <%= content_tag :label do %> 

    <%= text_field_tag :limit, params[:limit] , :id=>'num', :class => "span1 search-query" %> 

    <% end %>

    <button type="submit" class="btn btn-info">Mostrar</button>
 
  </div>

  <div class="input-append sea">

      <%= text_field_tag :search, params[:search], :class => "span2 search-query ", :placeholder => "Buscar Registro" %> 

      <button type="submit" class="btn btn-info"><i class="icon-search"></i></button>
       
  </div>

</form>

<br /><br />

<table class="table table-hover table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'botella_de_vino' %></th>
      <th><%= sortable 'otro_regalo' %></th>
      <th><%= sortable 'tabla_de_queso' %></th>
      <th><%= sortable 'alimento_id', :Alimento %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cortesias %>
  </tbody>
  </table>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva Cortesia', new_empleado_huesped_cortesia_path, :remote => true, :class => "btn btn-info", :style => "color:white" %></td>
      <td><%= link_to 'HuÃ©spedes', empleado_huespedes_path, :class => "btn btn-info", :style => "color:white" %></td>
    </tr>
  </tfoot>

<hr>

<div class="flickr_pagination" > 
  <div class="page_info">
      <p><b> Total Cortesias :</b> <%= @cortesias.total_entries %> </p>
    </div>
    <%= will_paginate @cortesias, :container => false, :previous_label => '&larr; Anterior', :next_label => 'Siguiente &rarr;' %>
  </div>