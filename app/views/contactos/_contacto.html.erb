<tr id=<%= "contacto_#{contacto.id}" %>>
  <td><%= contacto.id %></td>
  <td><%= contacto.nombre %></td>
  <td><%= contacto.extension %></td>
  <td><%= contacto.celular %></td>
  <td><%= contacto.email %></td>
  <td><%= contacto.fecha_nacimiento %></td>
 
  <td>
    <div class="btn-group">
      <button class="btn btn-mini btn-info"> Opciones </button>
      <button class="btn btn-mini btn-info dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" >

      <li><%= link_to 'Mostrar', empresa_contacto_path(@empresa, contacto), :remote => true, :class => 'btn btn-mini' %></li>

      <li><%= link_to 'Editar', edit_empresa_contacto_path(@empresa,contacto), :remote => true, :class => 'btn btn-mini' %></li>

      <li><%= link_to 'Eliminar', empresa_contacto_path(@empresa, contacto), 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %></li>
        </ul>
    </div>
  </td>
</tr>



