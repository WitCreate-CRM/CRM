<%- model_class = Contacto -%>
<div class="page-header">
  <h1>Contactos</h1>
 <%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 

 Nombre Contacto:
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil %> 
 <% end %> 
 
<br />

<br>
Seleccione numero de registros por pagina:

<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 
</br>
</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'empresa' %></th>
      <th><%= sortable 'Foto' %></th>
      <th><%= sortable 'nombre' %></th>
      <th><%= sortable 'celular' %></th>
      <th><%= sortable 'email' %></th>
      <th><%= sortable 'fecha_nacimiento' %></th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @contactos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Contacto', new_contacto_path, :remote => true %></td>
      
    </tr>
  </tfoot>
</table>


<br /> 
<br /> 
<div align="center"> 
 <%= will_paginate @contactos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 
<p> 
 Total Contactos : <%= @contactos.total_entries %> 
</p>

