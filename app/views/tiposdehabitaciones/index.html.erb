<%- model_class = Tiposdehabitacion -%>
<div class="page-header">
  <h1>Tipos De Habitaciones</h1>
</div>

<%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 Buscar Tipo De Habitación: 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil, :class => 'btn' %> 
 <% end %> 
<br> 
Seleccione numero de registros por pagina:
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 

<br />

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th><%= sortable 'descripcion', :Descripción %></th>
      <th><%= sortable 'habitacion_tina' %></th>
      <th><%= sortable 'piso' %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @tiposdehabitaciones %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Tipo De Habitación', new_tiposdehabitacion_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br /> 

<div align="center"> 
<%= will_paginate @tiposdehabitaciones, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 

<p> Total Tipos De Habitaciones : <%= @tiposdehabitaciones.total_entries %> </p>