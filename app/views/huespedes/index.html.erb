<%- model_class = Huesped -%>
<div class="page-header">
  <h1>Huéspedes</h1>
</div>

<%= form_tag request.path, :method => 'get' do %> 
 <%= content_tag :label do %> 
 Buscar Huésped: 
 <%= text_field_tag :search, params[:search] %> 
 <%= submit_tag "Consultar", :name => nil, :class => 'btn' %> 
 <% end %> 
<br> 
Seleccione numero de registros por página:
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Mostrar", :name => nil, :class => 'btn' %> 
<% end %> 

<br />

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable 'id' %></th>
      <th> Foto </th>
      <th> <%= sortable 'primer_nombre' %> </th>
      <th> <%= sortable 'primer_apellido' %> </th>
      <th> <%= sortable 'tipo_identificacion_id' %> </th>
      <th> <%= sortable 'fecha_nacimiento' %> </th>
      <th> <%= sortable 'direccion', :Dirección %> </th>
      <th> <%= sortable 'email' %> </th>
      <th>Otros Datos</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @huespedes %>
  </tbody>
  </table>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Huésped', new_huesped_path, :remote => true %></td>
    </tr>
  </tfoot>


<br /> <br>

<div align="center"> 
<%= will_paginate @huespedes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %> 
</div> 

<p> Total Huéspedes : <%= @huespedes.total_entries %> </p>