<%- model_class = Huesped -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class='gen'>
  <p><b>Id:</b> <%= @huesped.id %></p>
  <p><b>Primer nombre:</b> <%= @huesped.primer_nombre %></p>
  <p><b>Segundo nombre:</b> <%= @huesped.segundo_nombre %></p>
  <p><b>Primer apellido:</b> <%= @huesped.primer_apellido %></p>
  <p><b>Segundo apellido:</b> <%= @huesped.segundo_apellido %></p>
  <p><b>Tipo de identificación:</b> <%= @huesped.tipo_identificacion_id %></p>
  <p><b>Documento:</b> <%= @huesped.documento %></p>
  <p><b>Fecha de nacimiento:</b> <%= @huesped.fecha_nacimiento %></p>
  <p><b>Dirección:</b> <%= @huesped.direccion %></p>
  <p><b>Email:</b> <%= @huesped.email %></p>
  <p><b>Empleado encargado:</b> <%= @huesped.empleado_encargado_id %></p>
</div>

<br>
<%= link_to "pdf", huesped_path(@huesped, :format => "pdf"), :class => 'btn' %>